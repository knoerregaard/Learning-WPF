<UserControl x:Class="WPF_Styling.Views.Partials.ContentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Styling.Views.Partials"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid MaxWidth="900" Width="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>

        <Border CornerRadius="10,10,10,0" Grid.Row="0" Grid.Column="0" Background="white" Margin="10">
            <StackPanel HorizontalAlignment="Center" Width="Auto"  Orientation="Horizontal" Margin="20,0,0,0" >
                <TextBlock HorizontalAlignment="Center">asd</TextBlock>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="0" Grid.Column="1" Width="Auto"  Orientation="Horizontal" Margin="10" >
            <TextBlock >Indholdsrude 2</TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
